    <style>
        #heading {
            text-align: center;
        }

        span {
            display: inline-block;
            margin-bottom: 2px;
            padding: 0;
        }

        p {
            display: inline-block;
        }

        ul {
            list-style: none;
            display: inline-block;
            text-align: left;
        }

        li {
            width: 600px;
        }

        #ul1 {
            text-align: center;
        }

        #list-item {
            background-color: rgb(100, 100, 248);
            border: 2px solid black;
        }

        #list-item:hover {
            background-color: lightskyblue;
        }

        #heading {
            color: grey;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        #form1 {
            text-align: center;
        }

        #list-item div {
            display: flex;
            justify-content: space-between;
        }

        #delete-btn {
            background-color: white;
        }

        #view-btn {
            background-color: white;
        }

        #div1 {
            width: 100px;
            margin-right: 10px;
            display: inline-block;
        }

        #div2 {
            width: 300px;
            margin-right: 10px;
            display: inline-block;
        }
    </style>
</head>

<body>
    <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-black fixed-top">
        <!-- Container wrapper  -->
