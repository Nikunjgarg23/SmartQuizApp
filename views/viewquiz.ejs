    <br>
    <br>
    <br>
    <div>
        <h1 id="heading"><i class="fa-solid fa-pencil"></i> Questions!</h1>
    </div>
    <div id="ul1">
        <ol id="list">
            <% for(let i of past_quiz){ %>
                <li id="list-item">
                    <div>
                        <div id="div1">
                            <%= i.questionId %>
                        </div>
                        <div id="div2">
                            <%= i.questionText %>
                        </div>
                        <!-- <a href="/teacher/viewquiz/?id=<%=i._id%>" id="view-btn"><i class="fa-regular fa-eye"></i> </a> -->
                        <a href="/teacher/deleteques/?id=<%=i._id%>" id="delete-btn"><i class="fa-regular fa-trash-can"></i></a>
                    </div>
                </li>
                <% } %>
        </ol>
