    <style>
        .container {
            width: calc(33.33% - 20px);
            float: left;
            clear: none;
            margin-right: 20px;
            margin-bottom: 20px;
        }

        .card {
            width: 100%;
            box-shadow: 0 4px 8px 0 rgba(0, 0.3, 0.3, 0.3);
            transition: 0.3s;
            background: linear-gradient(to bottom right, #3b3a3a, #fff);

        }

        .card:hover {
            background: linear-gradient(to top left, #000, #fff);
            box-shadow: 0 8px 16px 0 rgba(0, 0.3, 0.3, 0.4);
        }

        .card-body h5 {
            text-align: center;
            font-weight: bold;
            font-size: 1.5em;
            margin-bottom: 10px;
            color: #333;
            text-transform: uppercase;
            position: relative;
            padding-bottom: 10px;
        }

        .card-body h5::before {
            content: "";
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 40%;
            height: 2px;
            background-color: #333;
            transform: translateX(-50%);
        }

        .card-body {
            padding-top: 20px;
        }

        #heading {
            text-align: center;
            color: grey;
            margin-bottom: 10px;
            margin-top: 10px;
        }

        .dropdown {
            display: none;
        }

        .checkbox-label {
            display: block;
        }

        ::placeholder {
            color: white;
        }

        .btn-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            /* Align buttons to start of card */
            margin-top: 20px;
        }

        .btn-container .btn {
            margin-right: 10px;
            /* Add margin between buttons */
            margin-bottom: 10px;
        }

        /* Remove underline from email and subject description */
        .card-subtitle.text-muted {
            text-decoration: none;
        }
    </style>
</head>

